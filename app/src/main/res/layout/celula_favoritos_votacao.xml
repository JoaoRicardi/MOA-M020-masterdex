<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pokemon_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/branco"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/azulBackground"
        app:strokeWidth="@dimen/cardview_default_elevation">



        <TextView
            android:id="@+id/nome_pokemon_votado"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/circle"
            android:backgroundTint="@color/azulBackground"
            android:gravity="center|top"
            android:text="Pokemons"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:textSize="16sp"
            android:textStyle="bold" />


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>